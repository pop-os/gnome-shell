+<?xml version="1.0" encoding="UTF-8"?>
+<schemalist gettext-domain="@GETTEXT_PACKAGE@">
+  <enum id="com.ubuntu.login-screen.BackgroundRepeat">
+    <value value="1" nick="default"/>
+    <value value="2" nick="repeat"/>
